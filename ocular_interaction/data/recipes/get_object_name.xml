        <arg name="message" value="Finishing recipe: tell_object_name" type="string"/>
      </roboml:args>
    </action>

    <assignment>
    </assignment>
  </body>
  <!-- --------------------------------------------------------------------- -->

  <assignpost>
    <atom>
        <slot name="this" var="object_name_atom"/>
        <slot name="consumed" val="true"/>
    </atom> 
  </assignpost>
</recipe>
