<!-- ####################################################################### -->
<!-- Get Object Name from ASR                                                -->
<!-- ####################################################################### -->
<recipe name="get_object_name_from_asr">
  <precondition>
    <atom>
      <slot name="type"     val="asr_googleOK"/> <!-- Here I should use a name finder aggregator instead of raw ASR-->
      <slot name="subtype"  val="user"/>
      <slot name="consumed" rel="equal" val="false"/>
      <slot name="content"  rel="!=" val="_UNKNOWN_"/>
      <slot name="content"  rel= "bind" var="content_var"/>
      <slot name="this" rel="bind" var="asr_google_OK_atom"/>
    </atom> 
  </precondition>

  <!-- --------------------------------------------------------------------- -->
  <body order="sequence">
    <action name="log" actor="ros_logger">
      <roboml:args>
        <arg name="logger" value="loginfo" type="string"/>
        <arg name="message" value="Recipe Triggered: get_object_name_from_asr" type="string"/>
      </roboml:args>
    </action>

    <action name="object_name" actor="object_name_translator">
      <roboml:args>
          <arg name="object_name" value="$content_var" type="string"/> 
      </roboml:args>
    </action>

    <action name="log" actor="ros_logger">
      <roboml:args>
        <arg name="logger" value="loginfo" type="string"/>
        <arg name="message" value="Finishing recipe: get_object_name_from_asr" type="string"/>
      </roboml:args>
    </action>

    <assignment>
    </assignment>
  </body>
  <!-- --------------------------------------------------------------------- -->

  <assignpost>
    <atom>
        <slot name="this" var="asr_google_OK_atom"/>
        <slot name="consumed" val="true"/>
    </atom> 
  </assignpost>
</recipe>
