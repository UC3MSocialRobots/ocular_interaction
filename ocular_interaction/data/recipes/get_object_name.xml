    <action name="log" actor="ros_logger">
      <roboml:args>
        <arg name="logger"  value="loginfo" type="string"/>
        <arg name="message" value="Finishing recipe: get_object_name" type="string"/>
      </roboml:args>
    </action>

    <assignment>
    </assignment>
  </body>
  <!-- --------------------------------------------------------------------- -->

  <assignpost>
  </assignpost>
</recipe>
